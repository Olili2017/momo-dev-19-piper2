<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.piper2.momo.parent.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/strip_background"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:scrollbarSize="0dp" >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/appname"
                            android:text="@string/appname"
                            android:textSize="12sp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:background="@drawable/circler_bg"
                                android:src="@drawable/hand_wave" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/welcome"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="18sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:translationY="-12dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal"
                                android:paddingStart="16dp"
                                android:paddingEnd="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hello"
                                    android:textSize="24sp"
                                    android:textStyle="bold|italic"
                                    android:textColor="@color/white"
                                    android:paddingEnd="8dp"
                                    android:paddingStart="0dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Daniel"
                                    android:textColor="@color/white"
                                    android:textStyle="italic"
                                    android:textSize="24sp" />
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@drawable/line"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0772649119"
                                    android:textSize="16sp"
                                    android:textStyle="bold|italic"
                                    android:textColor="@color/colorBlue"
                                    android:paddingEnd="0dp"
                                    android:paddingStart="8dp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:elevation="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/cardwithshadow">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/balance"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_my_balance"
                                android:text="@string/balance_placeholder"
                                android:textStyle="bold"
                                android:textSize="24sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">
                                <ImageButton
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/ic_cash_blue"
                                    android:background="@drawable/circle_bg_grandient"
                                    android:padding="12dp"
                                    android:id="@+id/btn_send"
                                    android:layout_marginBottom="@dimen/paddingDefault"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/send_money"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"
                                    android:textAllCaps="true"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">
                                <ImageButton
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:id="@+id/btn_create_child"
                                    android:background="@drawable/circle_bg_grandient"
                                    android:src="@drawable/ic_add_child"
                                    android:padding="12dp"
                                    android:layout_marginBottom="@dimen/paddingDefault"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/add_child"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"
                                    android:textAllCaps="true"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:elevation="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingDefault"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/cardwithshadow">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAllCaps="false"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:text="@string/send_money_to" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/view_all"
                                android:id="@+id/btn_view_all_recipients"
                                android:textColor="@color/colorBlue"
                                android:textStyle="bold"
                                android:textAllCaps="true"
                                android:background="@drawable/bg_pill"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingDefault">

                            <androidx.cardview.widget.CardView
                                android:layout_width="60dp"
                                android:layout_height="70dp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="4dp">
                                    <ImageButton
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:id="@+id/btn_send_to_new"
                                        android:layout_gravity="center"
                                        android:background="@drawable/circle_bg_grandient"
                                        android:src="@drawable/ic_add_white_24dp"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="New"
                                        android:layout_marginTop="4dp"
                                        android:textAllCaps="true"
                                        android:gravity="center_horizontal"
                                        android:layout_gravity="center_horizontal"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:foreground="@drawable/fg_shadowy_sides" >
                                <HorizontalScrollView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scrollbars="none">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent" >
                                            <androidx.recyclerview.widget.RecyclerView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:id="@+id/rv_children_square_recycler">

                                            </androidx.recyclerview.widget.RecyclerView>
                                        </RelativeLayout>
                                    </LinearLayout>
                                </HorizontalScrollView>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:elevation="8dp"
                    app:cardElevation="8dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/cardwithshadow">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/last_transaction"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_last_transction_amount"
                                android:text="@string/last_transaction_placeholder"
                                android:textStyle="bold"
                                android:textColor="@color/textPrimary"
                                android:textSize="24sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:orientation="vertical"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="From: 0772649118" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Type: (transfer)" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/transaction_date_placeholder"
                                    android:textColor="#77222222"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:id="@+id/btn_goto_transactions">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:src="@drawable/transactions_icon"
                                    android:padding="12dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="View all"
                                    android:gravity="center_horizontal"
                                    android:layout_gravity="center_horizontal"
                                    android:textAllCaps="false"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>