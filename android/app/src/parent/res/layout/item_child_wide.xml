<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="6dp"
    android:clipToPadding="true"
    android:layout_marginBottom="@dimen/paddingDefault"
    android:id="@+id/cv_child_view_container">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="@dimen/paddingDefault">
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ib_child_image"
        android:layout_gravity="center"
        android:background="@drawable/circler_bg_user"
        android:src="@drawable/ic_person_white_24dp" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_child_name"
        android:layout_weight="1"
        android:text="@string/child_name"
        android:layout_marginTop="4dp"
        android:paddingStart="@dimen/paddingDefault"
        android:paddingEnd="0dp"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"/>
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circler_bg_user"
        android:src="@drawable/ic_chevron_right_blue_24dp"
        android:tint="@color/white"
        android:layout_gravity="center_vertical"/>
</LinearLayout>
</androidx.cardview.widget.CardView>